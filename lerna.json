{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "npmClient": "npm",
  "packages": ["packages/*"],
  "command": {
    "publish": {
      "message": "chore(release): publish",
      "ignoreChanges": ["**/dist/**"],
      "registry": "https://registry.npmjs.org/",
      "allowBranch": "main"
    }
  }
}
